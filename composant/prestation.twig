
        <!-- Special Description Area -->
        <div class="special_description_area bg-white pt-150-jm">
            <div class="container col-12">
                    {% setcontent pack = 'packs/latest/8' %}
		               {% for pack in pack %}
    
               {% if loop.index is odd %}
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-6 " style="background-image: url('files/{{ pack.image }}'); height: 700px; width: 100%; background-size: cover;">
                      {#  <div class="special_description_img">
                            <img src="files/1.jpg" alt="">
                        </div> #}
                    </div>
                    <div class="col-12 col-md-4 col-lg-4 "style="margin-top: auto; margin-bottom: auto; margin-left: auto; margin-right: auto;">
                        <div class="special_description_content" style="text-align: center;">
                            <h2 style="text-align: center;">{{ pack.title }}</h2>
                            <p style="text-align: center;">{{ pack.content }}</p>
                            <div class="app-download-area">
                                <div class="app-download-btn wow fadeInUp" data-wow-delay="0.2s" style="margin-right:auto; margin-left:auto;">
                                    <!-- Google Store Btn -->
                                    <a href="{{ pack.link_button }}">
                                      
                                        <p class="mb-0" style="text-align: center;">{{ pack.title_button }}</p>
                                    </a>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
                    {% else %}
                         <div class="row">
                    
                    <div class="col-12 col-md-4 col-lg-4 "style="margin-top: auto; margin-bottom: auto; margin-left: auto; margin-right: auto; text-align: center;">
                        <div class="special_description_content">
                            <h2 style="text-align: center;">{{ pack.title }}</h2>
                            <p style="text-align: center;">{{ pack.content }}</p>
                            <div class="app-download-area">
                                <div class="app-download-btn wow fadeInUp" data-wow-delay="0.2s" style="margin-right:auto; margin-left:auto;">
                                    <!-- Google Store Btn -->
                                    <a href="{{ pack.link_button }}">
                                      
                                        <p class="mb-0">{{ pack.title_button }}</p>
                                    </a>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                             <div class="col-12 col-md-6 col-lg-6 " style="background-image: url('files/{{ pack.image }}'); height: 700px; width: 100%; background-size: cover;">
                      {#  <div class="special_description_img">
                            <img src="files/1.jpg" alt="">
                        </div> #}
                    </div>
                </div>
                    {% endif %}
                   {% endfor %}	    
            </div>
        </div>
    </section>
